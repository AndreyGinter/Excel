.excel__table
    position: absolute;
    left: 0;
    right: 0;
    top: $header-height + $toolbar-height + $formula-height;
    overflow-x: auto;
    padding-bottom: 2px;

    .row
        display: flex;
        flex-direction: row;
        min-height: 20px;
        height: $row-height;


    .row-info
        user-select: none
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        min-width: $info-cell-width;
        height: 100%;
        border: 1px solid $border-color;
        background: #f8f9fa;
        border-top: none;


    .row-data
        display: flex;


    .column
        user-select: none
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        background: #f8f9fa;
        min-width: 40px;
        width: $cell-width;
        border: 1px solid $border-color;
        border-top: 0;
        border-left: 0;
        height: 100%;


    .cell
        position: relative;
        min-width: 40px;
        padding: 5px;
        width: $cell-width;
        height: 100%;
        border: 1px solid #e2e3e3;
        border-top: 0;
        border-left: 0;
        color: #111;
        white-space: nowrap;
        outline: none;


        &.selected
            border: none;
            outline: 2px solid $primary-color;
            z-index: 2;

    .col-resize, .row-resize
        position: absolute
        z-index: 2
        opacity: 0
        bottom: 0
        right: 0
        background: $primary-color

        &:hover
            opacity: 1
    
    .col-resize
        top: 0
        width: 3px

        &:hover
            cursor: col-resize

    .row-resize
        left: 0
        height: 3px

        &:hover
            cursor: row-resize


[data-resizing='true']
    z-index: 2
    opacity: 1 !important

    &.col-resize::before
        content: ""
        position: absolute
        top: 0
        right: 0
        width: 1px
        height: 100vh
        background: $primary-color

    &.row-resize::before
        content: ""
        position: absolute
        bottom: 0
        left: 0
        width: 100vw
        height: 1px
        background: $primary-color



